@model HomeworkAssignment3.Models.customer

@{
    ViewBag.Title = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>👨‍💼 Customer Details</h2>
        <div>
            @Html.ActionLink("Edit", "Edit", new { id = Model.customer_id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Back to Maintain", "Index", "Maintain", null, new { @class = "btn btn-secondary" })
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
            <h5 class="mb-0">Customer Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Customer ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.customer_id)</dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.first_name)</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.last_name)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.email)</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.phone)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Street</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.street)</dd>

                        <dt class="col-sm-4">City</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.city)</dd>

                        <dt class="col-sm-4">State</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.state)</dd>

                        <dt class="col-sm-4">Zip Code</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.zip_code)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit Customer", "Edit", new { id = Model.customer_id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Back to Customer List", "Index", "customers", null, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Back to Maintain", "Index", "Maintain", null, new { @class = "btn btn-outline-secondary" })
        @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-outline-info" })
    </div>
</div>