@model HomeworkAssignment3.Models.staff

@{
    ViewBag.Title = "Staff Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>👥 Staff Details</h2>
        <div>
            @Html.ActionLink("Edit", "Edit", new { id = Model.staff_id }, new { @class = "btn btn-warning" })
            @Html.ActionLink("Back to Maintain", "Index", "Maintain", null, new { @class = "btn btn-secondary" })
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Staff Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Staff ID</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.staff_id)</dd>

                        <dt class="col-sm-4">First Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.first_name)</dd>

                        <dt class="col-sm-4">Last Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.last_name)</dd>

                        <dt class="col-sm-4">Email</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.email)</dd>

                        <dt class="col-sm-4">Phone</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.phone)</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Active</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.active == 1 ? "bg-success" : "bg-secondary")">
                                @(Model.active == 1 ? "Yes" : "No")
                            </span>
                        </dd>

                        <dt class="col-sm-4">Store</dt>
                        <dd class="col-sm-8">@(Model.store?.store_name ?? "N/A")</dd>

                        <dt class="col-sm-4">Manager</dt>
                        <dd class="col-sm-8">@(Model.staff1?.first_name ?? "N/A")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Edit Staff", "Edit", new { id = Model.staff_id }, new { @class = "btn btn-warning" })
        @Html.ActionLink("Back to Staff List", "Index", "staffs", null, new { @class = "btn btn-outline-primary" })
        @Html.ActionLink("Back to Maintain", "Index", "Maintain", null, new { @class = "btn btn-outline-secondary" })
        @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-outline-info" })
    </div>
</div>