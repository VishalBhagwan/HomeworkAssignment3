@model IEnumerable<HomeworkAssignment3.Models.product>

@{
    ViewBag.Title = "Products Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>🚴 Products Management</h2>
        @Html.ActionLink("Create New Product", "Create", null, new { @class = "btn btn-success" })
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h5 class="mb-0">Product List</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Brand</th>
                            <th>Category</th>
                            <th>Model Year</th>
                            <th>List Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.product_id)</td>
                                <td>@Html.DisplayFor(modelItem => item.product_name)</td>
                                <td>@Html.DisplayFor(modelItem => item.brand.brand_name)</td>
                                <td>@Html.DisplayFor(modelItem => item.category.category_name)</td>
                                <td>@Html.DisplayFor(modelItem => item.model_year)</td>
                                <td>R @Html.DisplayFor(modelItem => item.list_price)</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        @Html.ActionLink("Edit", "Edit", new { id = item.product_id }, new { @class = "btn btn-warning" })
                                        @Html.ActionLink("Details", "Details", new { id = item.product_id }, new { @class = "btn btn-info" })
                                        @Html.ActionLink("Delete", "Delete", new { id = item.product_id }, new { @class = "btn btn-danger" })
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <strong>No products found.</strong> Click "Create New Product" to add the first product.
                </div>
            }
        </div>
    </div>

    <div class="mt-3">
        @Html.ActionLink("Back to Home", "Index", "Home", null, new { @class = "btn btn-secondary" })
        @Html.ActionLink("Back to Maintain", "Index", "Maintain", null, new { @class = "btn btn-outline-primary" })
    </div>
</div>

<style>
    .table th {
        background-color: #343a40;
        color: white;
        font-weight: 600;
    }

    .btn-group .btn {
        margin: 0 1px;
    }

    .table-responsive {
        border-radius: 0.375rem;
    }
</style>